-## Testing for @iis presence because callslip needs it
-## but not sure if callslip is even sticking around (what's
-## the difference between it and L2L?)
-if (@iis.present? && @iis.length > 0)
  .control-group
    %label.control-label
      -if (@iis.length > 1)
        Select a copy:
      -elsif (@iis.length == 1)
        This copy:
    -if (@iis.length > 1)
      .controls
        %input(type="radio" name="holding_id" value="" id="Any Copy")
        %label.radio-label{ :for => "Any Copy"} Any Copy
    -@iis.each do |copyn, copyd|
      .controls
        -if (@iis.length == 1)
          %input(type="radio" name="holding_id" value="#{copyn}" checked)
        -else
          %input(type="radio" name="holding_id" value="#{copyn}" id="#{copyn}")
        %label.radio-label{ :for => "#{copyn}"}
          = "#{copyd[:location]} #{copyd[:copy]} #{copyd[:enumeration]}"
          %span.copy-callnumber
            = copyd[:call_number]
          -if copyd[:chron].present?
            %span.copy-chron.label
              = copyd[:chron]
