<% # container for a single doc -%>
<div class="document <%= render_document_class document %> clearfix" data-bibid="<%= document.id %>">
  <img id="isbn_<%= bookcover_isbn(document) %>" class="bookcover img-polaroid" src="/assets/cornell/layout/placeholder-item.png" data-isbn="<%= bookcover_isbn(document) %>">

  <div class="document-data">
    <%= render :partial => 'document_header', :locals => { :document => document, :document_counter => document_counter } %>

    <% # main container for doc partial view -%>
    <%= render_document_partial document, :index %>
  </div>
</div>
