 <%# default partial to display solr document fields in catalog index view -%>
 <%# This file is needed to display icon images in results display -%>

<dl class="defList">
  <div class="blacklight-title_display"><%= render_index_field_value :document => document, :field => 'title_display' %></div>  
  <div class="blacklight-author_display"><%= render_index_field_value :document => document, :field => 'author_display' %></div>  
  <div class="blacklight-fpl">  
    <span class="blacklight-format"><%= formats_with_icons(document) %></span>&nbsp;&nbsp;&nbsp;  
    <span class="blacklight-avail"  id="blacklight-avail-<%=document.id%>"> <script = availability for <%= document.id %> <script  type="text/javascript">load_short_holdings(<%=document.id%>)</script></span>&nbsp;&nbsp;&nbsp;
  	<span class="blacklight-pub_info_display"><%= render_index_field_value :document => document, :field => 'pub_info_display' %></span>  
  	<span class="blacklight-language_facet"><%= render_index_field_value :document => document, :field => 'language_facet'%></span>  
  </div>  
  <div class="blacklight-edition_display">  
  	<%= render_index_field_value :document => document, :field => 'edition_display' %>  
  </div> 
</dl> 
