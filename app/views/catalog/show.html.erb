<div class="span12 main-content">

  <%= render :partial => 'search_form.html.erb' %>
  <% @page_title = t('blacklight.search.show.title', :document_title => document_show_html_title, :application_name => application_name) %>
  <% extra_head_content << render_link_rel_alternates %>
  <% sidebar_items << render_document_sidebar_partial %>
  <%= link_back_to_catalog %> <%= render :partial => 'show_tools_links' %>

  <div class="show">
    <%= render 'constraints', :localized_params=>session[:search] %>
  </div>

  <div class="pageEntriesInfo">
    <%= item_page_entry_info %>
    <%=link_to t('blacklight.search.start_over'), catalog_index_path, :id=>"startOverLink" %><%= render 'previous_next_doc' %>

  </div>
  <br>

  <div class="row">
  <%# this should be in a partial -%>
    <div id="document" class="<%= render_document_class %> span8">
      <div id="doc_<%= @document.id.to_s.parameterize %>">
        <% # bookmark/folder functions -%>
        <%= render_show_doc_actions @document %>        
        <%= render_document_heading(:h2).html_safe %>
        <div class="cover">
          <img src="img/johnson.jpg" class="img-polaroid">
        </div>
        <div class="document item-metadata">
          <%= render_document_partial @document, :show %>
        </div>
      </div>
    </div>
    <div class="span4">
      <div class="holdings">
          <%= render :partial => 'show_holdings', :locals => {:documents => @response.docs}  %>
      </div>
      <div class="requests">
        <a href="#">Request</a>
      </div>
    </div>
  </div>

</div>

  <% if @document.respond_to?(:export_as_openurl_ctx_kev) %>
    <!-- 
         // COinS, for Zotero among others. 
         // This document_partial_name(@document) business is not quite right,
         // but has been there for a while. 
    -->
  <% end %>
