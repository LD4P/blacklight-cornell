<% for i in 2..3 do %>
  <div class="input_row">
    <div class="boolean_row">
      <label class="radio inline">
        <input type="radio" name="as_boolean_row<%= i %>" value="and"> and
      </label>
      <label class="radio inline">
        <input type="radio" name="as_boolean_row<%= i %>" value="or"> or
      </label>
      <label class="radio inline">
        <input type="radio" name="as_boolean_row<%= i %>" value="not"> not
      </label>
    </div>

    <label for="q_row<%= i %>" class="hide-text"><%= t('blacklight.search.form.q') %></label>

    <%= text_field_tag "q_row#{i}" %>

    <%= select_tag("op_row#{i}", options_for_select({'all'=>'AND','any'=>'OR', 'phrase' => ''}.sort,'all'), :class => 'input-small') %> in

    <%= select_tag("search_field_row#{i}", options_for_select(search_fields_for_advanced_search.collect{|key, field_def| [field_def.label, field_def.field]}), :class => 'advanced-search-field') %>
  </div>
<% end %>
