<div id="toplevelnav" class="d-flex flex-row flex-wrap ">


<% @hierarchy.keys.each do |key| 
	if !@callhash[key].nil?
%>
  <a headingtype="nav" heading="<%=key%>" class="card w-25 px-3 list-group-item-action" href="<%=key%>" title="<%=@callhash[key]%>"><%=@callhash[key]%></a>
<% 
	end
  end 
%>

</div>

<hr/>
<div class="row">
<div class="col-sm-2">
<div id="classification_headings" base-url="<%= root_url %>" class="border">
<% @hierarchy.keys.each do |key| 
	if !@callhash[key].nil?
%>
	<div headingtype="sub" class="overflow-auto" style="height:500px;display:none" heading="<%=key%>"><a class="font-weight-bold pl-1 list-group-item-action" heading="<%=key%>" href="<%=key%>" title="<%=@callhash[key]%>"><h3><%=@callhash[key]%></h3></a>
	<%
	  subheadings = @hierarchy[key]
	  subheadings.each do |sh|
	    if @callhash.key?(sh)
	  	 subheading = @callhash[sh].encode!('UTF-8', 'binary', invalid: :replace, undef: :replace, replace: '')
	  %>
	  		<div  class="d-flex flex-column flex-nowrap"><a title="<%=subheading%>" class="border border-top-0 border-left-0 border-right-0 pl-1 ml-2 w-25 list-group-item-action" heading="<%=sh%>" href="<%=sh%>"><%=subheading%></a></div>
	  <%
	  	end
	  end
	  %>
	
	</div>
<% 
	end
  end 
%>
</div>
</div>

<div id="browsecontent" class="col-sm-3 border">
<div id="subjectcontent" class="overflow-auto" style="height:500px">
</div>
</div>

<div id="subjectdescription" class="col-sm-3 border">


</div>
<div id="documents" class="col-sm-4 border">


</div>

</div>