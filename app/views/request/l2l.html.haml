%h1.request-type Catalog request: library to library delivery
%h2.blacklight-title_display.item-title-request=@ti
= link_to catalog_path(@id), {:title => @ti} do
  %i.icon-circle-arrow-left
  Return to item
%div.request-author=@au
%div.request-form
  %form{:id => 'req', :method => 'post', :action => request_make_request_path}
    %input(type="hidden" name="bid" value="#{@id}" id="bid")
    %input(type="hidden" name="request_action" value="callslip" id="request_action")
    %br
    = render :partial => 'shared/reqpu'
    %br
    = render :partial => 'shared/reqit'
    %p
    Comments:
    %br
    %textarea(id="reqcomments")
    %p
    %input(type="submit" id="request_sumbit" name="sumbit" value="Submit delivery request" class="btn-danger btn")
    %input(type="reset" id="reest" value="Clear form" class="btn")
    %br
    %div(id="result" name="result" value="")
